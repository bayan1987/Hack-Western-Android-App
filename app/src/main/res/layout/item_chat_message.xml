<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="@dimen/chat_avatar_size"
            android:layout_height="@dimen/chat_avatar_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_chat_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <hackwestern.hack.com.hackwestern.widgets.AppTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_chat_user_name"
                    android:textColor="@color/color_navy_blue"
                    app:textStyle="@integer/OPEN_SANS_REGULAR" />

                <hackwestern.hack.com.hackwestern.widgets.AppTextView
                    android:id="@+id/tvHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:text="9 hrs ago"
                    android:textColor="@color/color_hint_grey"
                    android:textSize="12sp"
                    app:textStyle="@integer/OPEN_SANS_REGULAR" />
            </LinearLayout>

            <hackwestern.hack.com.hackwestern.widgets.AppTextView
                android:id="@+id/tvChatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:text="Lorem ipsum dolor sit amet dfsdfsfsdfsf sdfsdfs sfsdf sfdf dsfs"
                android:textColor="@color/color_grey_dark" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="72dp"
        android:background="#cccccc" />
</FrameLayout>