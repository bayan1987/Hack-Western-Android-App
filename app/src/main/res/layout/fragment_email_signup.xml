<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentViewSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:id="@+id/layoutSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <hackwestern.hack.com.hackwestern.widgets.AppTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="13"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_20dp"
                android:paddingTop="@dimen/dimen_20dp"
                android:text="@string/string_email_signup_screen_title"
                android:textSize="@dimen/dimen_25sp"
                app:textStyle="@integer/PT_SANS_WEB_REGULAR" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/drawable_email_linear_layout">


                <hackwestern.hack.com.hackwestern.widgets.AppEditText
                    android:id="@+id/etName"
                    style="@style/Theme.App.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_25dp"
                    android:layout_marginRight="@dimen/dimen_25dp"
                    android:background="@color/color_edit_text_background"
                    android:hint="@string/string_hint_name"
                    android:inputType="textCapWords"
                    android:paddingBottom="@dimen/dimen_9dp"
                    android:paddingLeft="@dimen/dimen_15dp"
                    android:paddingRight="@dimen/dimen_15dp"
                    android:paddingTop="@dimen/dimen_9dp"
                    android:textColor="@color/color_black_secondary"
                    android:textColorHint="@color/color_hint_grey"
                    android:textSize="@dimen/dimen_19sp"
                    app:textStyle="@integer/OPEN_SANS_REGULAR" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/drawable_email_linear_layout">


                <hackwestern.hack.com.hackwestern.widgets.AppEditText
                    android:id="@+id/etEmail"
                    style="@style/Theme.App.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_25dp"
                    android:layout_marginRight="@dimen/dimen_25dp"
                    android:background="@color/color_edit_text_background"
                    android:gravity="start"
                    android:hint="@string/string_hint_email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/dimen_9dp"
                    android:paddingLeft="@dimen/dimen_15dp"
                    android:paddingRight="@dimen/dimen_15dp"
                    android:paddingTop="@dimen/dimen_9dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_black_secondary"
                    android:textColorHint="@color/color_hint_grey"
                    android:textSize="@dimen/dimen_19sp"
                    app:textStyle="@integer/OPEN_SANS_REGULAR" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/drawable_email_linear_layout">


                <hackwestern.hack.com.hackwestern.widgets.AppEditText
                    android:id="@+id/etPassword"
                    style="@style/Theme.App.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_25dp"
                    android:layout_marginRight="@dimen/dimen_25dp"
                    android:background="@color/color_edit_text_background"
                    android:hint="@string/string_hint_password"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/dimen_9dp"
                    android:paddingLeft="@dimen/dimen_15dp"
                    android:paddingRight="@dimen/dimen_15dp"
                    android:paddingTop="@dimen/dimen_9dp"
                    android:textColor="@color/color_black_secondary"
                    android:textColorHint="@color/color_hint_grey"
                    android:textSize="@dimen/dimen_19sp"
                    app:textStyle="@integer/OPEN_SANS_REGULAR" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/drawable_email_linear_layout">


                <hackwestern.hack.com.hackwestern.widgets.AppEditText
                    android:id="@+id/etTwitterUsername"
                    style="@style/Theme.App.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_25dp"
                    android:layout_marginRight="@dimen/dimen_25dp"
                    android:background="@color/color_edit_text_background"
                    android:hint="@string/string_hint_twitter_username"
                    android:inputType="text"
                    android:paddingBottom="@dimen/dimen_9dp"
                    android:paddingLeft="@dimen/dimen_15dp"
                    android:paddingRight="@dimen/dimen_15dp"
                    android:paddingTop="@dimen/dimen_9dp"
                    android:textColor="@color/color_black_secondary"
                    android:textColorHint="@color/color_hint_grey"
                    android:textSize="@dimen/dimen_19sp"
                    app:textStyle="@integer/OPEN_SANS_REGULAR" />
            </LinearLayout>

            <hackwestern.hack.com.hackwestern.widgets.AppButton
                android:id="@+id/buttonEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/selector_rounded_white_button"
                android:text="@string/string_sign_up_vibes"
                android:textAllCaps="false"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_20sp"
                app:textStyle="@integer/OPEN_SANS_REGULAR" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutAlreadyRegistered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutSignUp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:paddingLeft="@dimen/dimen_55dp"
            android:paddingRight="@dimen/dimen_55dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10dp">

                <hackwestern.hack.com.hackwestern.widgets.AppTextView
                    android:id="@+id/textViewAlreadyRegistered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:gravity="center"
                    android:text="@string/string_email_already_registered_title"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_17sp"
                    app:textStyle="@integer/PT_SANS_WEB_REGULAR" />

                <ImageView
                    android:id="@+id/imageViewAlreadyRegistered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewAlreadyRegistered"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/drawable_ripple_effect"
                    android:padding="@dimen/dimen_3dp"
                    android:src="@drawable/ic_action_expand" />

            </RelativeLayout>
        </RelativeLayout>

        <include
            layout="@layout/layout_progress_bar_white_full_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
